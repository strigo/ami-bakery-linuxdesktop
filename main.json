{
  "variables": {
    "build_vpc": null,
    "owners": null,
    "ami_regions": null
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "ami_name": "strigo.io/ubuntu-20.04-LTS-xrdp_{{timestamp}}",
      "ami_description": "Strigo.io preconfigured image based on Ubuntu 20.04 LTS Server with XFCE desktop and xrdp preinstalled. Built on {{isotime \"2006-01-02\"}}",
      "tags": {
        "source_ami": "{{ .SourceAMI }}",
        "source_ami_name": "{{ .SourceAMIName }}"
      },

      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": ["099720109477"],
        "most_recent": true
      },

      "ssh_username": "ubuntu",
      "ami_virtualization_type": "hvm",
      "instance_type": "t2.medium",
      "run_tags": {
        "Name": "AMI Builder"
      },
      "vpc_id": "{{user `build_vpc`}}",

      "ami_regions": "{{user `ami_regions`}}",
      "ami_users": "{{user `owners`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },
    {
      "type": "file",
      "source": "./configs",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ],
      "scripts":[
        "scripts/init.sh",
        "scripts/install-xfce.sh",
        "scripts/install-xrdp.sh",
        "scripts/install-commons.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}